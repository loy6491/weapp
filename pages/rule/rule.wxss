.container {
  background-color: #182661;
  color: white;
  min-height: 100vh;
}
.rule-modal {
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  box-sizing: border-box;
  background-color: #1a2a6c;
}
.rule-content {
  padding: 0 50rpx 50rpx;
}
.title {
  width: 100%;
  text-align: center;
  font-size: 50rpx;
  line-height: 100rpx;
}
.guide {
  font-size: 26rpx;
  line-height: 44rpx;
  margin-bottom: 20rpx;
}
.h2 {
  line-height: 50rpx;
  font-size: 30rpx;
  margin-bottom: 2rpx;
}
.p {
  color: rgba(255,255,255, .5);
  font-size: 24rpx;
  margin-bottom: 10rpx;
}
.text {
  line-height: 40rpx;
}
